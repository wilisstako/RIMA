<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane fx:id="inventoryPane" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.InventoryController">
   <center>
      <TableView fx:id="inventory" onSort="#sortInventory" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="id_no" text="ID No." />
          <TableColumn fx:id="name" text="Name" />
            <TableColumn fx:id="description" text="Description" />
            <TableColumn fx:id="stockQty" text="Stock QTY" />
            <TableColumn fx:id="supplier" text="Supplier" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </center>
</BorderPane>
