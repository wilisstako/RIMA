<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane fx:id="a_receivable_pane" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.AccountsreceivableController">
   <center>
      <TableView fx:id="aReceivableTable" onSort="#sortReceivable">
        <columns>
          <TableColumn fx:id="name" text="Customer Name" />
          <TableColumn fx:id="receipt_no" text="Receipt No." />
            <TableColumn fx:id="amt_due" text="Amount Due" />
            <TableColumn fx:id="amt_rec" text="Amount Received" />
            <TableColumn fx:id="typePayment" text="Payment Type" />
            <TableColumn fx:id="date" text="Payment Date" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </center>
</BorderPane>
